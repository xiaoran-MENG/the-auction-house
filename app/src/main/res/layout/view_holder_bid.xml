<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/my_bid_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:background="@color/secondary"
    android:clickable="false"
    android:paddingStart="5dp"
    android:paddingTop="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/biditem_auction_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:fontFamily="sans-serif"
                android:gravity="start"
                android:paddingHorizontal="6dp"
                android:text="NULL Auction"
                android:textAllCaps="true"
                android:textColor="@color/primary"
                android:textSize="20sp"
                android:textStyle="italic|bold" />

            <TextView
                android:id="@+id/biditem_bid_amt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="0.2"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:paddingHorizontal="3dp"
                android:text="Bid: $0.00"
                android:textAllCaps="true"
                android:textColor="@color/primary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/biditem_edit_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:background="@color/transparent"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:src="@drawable/ic_chevron_right"
                app:tint="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/biditem_product_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:ellipsize="end"
                android:fontFamily="@font/aubrey"
                android:padding="6dp"
                android:singleLine="true"
                android:text="Product: 2x set of Scholastic drawing pens of varying"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/biditem_last_bid_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/aubrey"
                    android:gravity="end"
                    android:paddingHorizontal="12dp"
                    android:text="Last Bid: 2023/02/19"
                    android:textColor="@color/primary" />

                <TextView
                    android:id="@+id/biditem_expiry_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/aubrey"
                    android:gravity="end"
                    android:paddingHorizontal="12dp"
                    android:text="Expiry: 2023/02/19"
                    android:textColor="@color/deep_red" />

                <TextView
                    android:id="@+id/biditem_bid_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/aubrey"
                    android:gravity="end"
                    android:paddingHorizontal="12dp"
                    android:text="Status: Pending..."
                    android:textColor="@color/deep_red" />
            </LinearLayout>

            <TextView
                android:id="@+id/biditem_auction_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:fontFamily="@font/aubrey"
                android:gravity="center"
                android:maxLines="3"
                android:paddingHorizontal="6dp"
                android:paddingBottom="10dp"
                android:layout_marginTop="6dp"
                android:singleLine="false"
                android:text="Description: Lorem ipsum dolor sit amet, consectetur: Lorem ipsum dolor sit amet, consectetur: Lorem ipsum dolor sit amet, consectetur: Lorem ipsum dolor sit amet, consectetur: Lorem ipsum dolor sit amet, consecteturamet, consecteturLorem ipsum dolor sit amet, consectetur: Lorem ipsum dolor sit amet, consectetur: Lorem ipsum dolor sit amet, consectetur: Lorem ipsum dolor sit amet, consectetur: Lorem ipsum dolor sit amet, consecteturamet, consectetur"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>